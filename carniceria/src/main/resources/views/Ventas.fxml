<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.control.cell.PropertyValueFactory?>


<VBox fx:id="rootPane" style="-fx-background-color: white;" stylesheets="@../css/styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.controllers.Ventas.VentasController">
   <children>
      <Label id="Titulo_modulo" maxWidth="Infinity" style="-fx-background-color: black;" text="Ventas de productos">
         <font>
            <Font size="35.0" />
         </font>
         <stylesheets>
            <URL value="@../css/styles.css" />
            <URL value="@../css/Fondo.css" />
         </stylesheets>
      </Label>

      <GridPane hgap="10" vgap="10">
         <columnConstraints>
            <ColumnConstraints hgrow="ALWAYS" minWidth="100.0" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="100.0" />
         </columnConstraints>
         <padding>
            <Insets top="20" right="20" bottom="20" left="20" />
         </padding>
         <children>
            <VBox spacing="10" GridPane.columnIndex="0" GridPane.rowIndex="0">
               <Label styleClass="label-conte" text="Código o nombre del producto:">
                  <font>
                     <Font size="20.0" />
                  </font>
               </Label>
               <Label styleClass="label-conte" text="Ingresa la cantidad (Kg):">
                  <font>
                     <Font size="20.0" />
                  </font>
               </Label>
            </VBox>

            <VBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="0">
               <TextField id="v_ingreso_cod" fx:id="codigoProductoTextField" style="-fx-background-color: F5D6D8; -fx-border-color: black;" />
               <TextField id="v_ingreso_cant" fx:id="pesoTextField" style="-fx-background-color: DFABAE; -fx-border-color: black;" />
               <ListView fx:id="listProductos" prefHeight="67.0" VBox.vgrow="ALWAYS" />
            </VBox>

            <VBox spacing="10" GridPane.columnIndex="2" GridPane.rowIndex="0">
               <Button mnemonicParsing="false" prefHeight="49.0" styleClass="btn" text="Archivo de productos" textFill="WHITE">
                  <font>
                     <Font size="18.0" />
                  </font>
               </Button>
               <HBox spacing="10">
                  <ToggleButton fx:id="clienteCheckBox" mnemonicParsing="false" text="Seleccionar cliente">
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </ToggleButton>
                  <Slider fx:id="slider" />
                  <TextField id="v_ingreso_cliente" fx:id="txtPorcentaje" alignment="CENTER_RIGHT" prefWidth="39.0" style="-fx-background-color: DFABAE; -fx-border-color: black;" text="\%" />
               </HBox>
               <TextField id="v_ingreso_cliente" fx:id="txtCliente" style="-fx-background-color: DFABAE; -fx-border-color: black;" />
               <ListView fx:id="clienteListView" visible="false" VBox.vgrow="ALWAYS" />
            </VBox>

            <HBox spacing="10" GridPane.columnSpan="3" GridPane.rowIndex="1">
               <Button fx:id="btnbuscarcode1" onAction="#agregarProducto" styleClass="btn_agre" text="Agregar   F5" />
               <Button id="bventas_cancelar" fx:id="borrarArticulo" onAction="#borrarArticulo" styleClass="btn_eli" text="Cancelar   F8" />
               <Button fx:id="btnbuscarcode2" onAction="#obtenerPesoBascula" styleClass="btn_peso" text="Obtener peso   F7" />
               <Button onAction="#addNewTicket" styleClass="btn_cont" text="Agregar nuevo ticket" />
            </HBox>
         </children>
      </GridPane>

      <TabPane fx:id="tabpane" VBox.vgrow="ALWAYS" tabClosingPolicy="ALL_TABS">       
         <tabs>
            <Tab text="Ticket 1">
               <content>
                  <TableView fx:id="tablaProductos" id="tablaProductos">
                     <columns>
                        <TableColumn fx:id="Cbarra" text="Código de barras">
                           <cellValueFactory>
                              <PropertyValueFactory property="codigoBarras" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="Descriptions" text="Descripción producto">
                           <cellValueFactory>
                              <PropertyValueFactory property="descripcionProducto" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="PrecioV" text="Precio de venta">
                           <cellValueFactory>
                              <PropertyValueFactory property="precioVenta" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="Cantidad" text="Cantidad">
                           <cellValueFactory>
                              <PropertyValueFactory property="cantidad" />
                           </cellValueFactory>
                        </TableColumn>
                        <TableColumn fx:id="ColumAcciones" text="Opciones">
                           <cellValueFactory>
                              <PropertyValueFactory property="opciones" />
                           </cellValueFactory>
                        </TableColumn>
                     </columns>
                     <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
                     </columnResizePolicy>
                  </TableView>
               </content>
            </Tab>
         </tabs>
      </TabPane>

      <HBox alignment="CENTER_LEFT" spacing="20">
         <padding>
            <Insets top="20" right="20" bottom="20" left="20" />
         </padding>
         <Button fx:id="imprimirticket" onAction="#abrirVentasHechas" styleClass="button-1" text="Reimprimir Ticket" />
         <Button id="bventas_cobrar" fx:id="btnFinalizarVenta" onAction="#cobrar" styleClass="button-1" text="Cobrar   F6" />
         <Region HBox.hgrow="ALWAYS" />
         <Label styleClass="label-conte" text="Importe Total:" />
         <Label id="importe_total" fx:id="totalImporteLabel" text="0.0" style="-fx-border-color: gray;" />
      </HBox>
   </children>
</VBox>
