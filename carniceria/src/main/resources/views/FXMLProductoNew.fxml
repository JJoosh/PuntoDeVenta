<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.URL?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Spinner?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="rootPane" style="-fx-background-color: white;" VBox.vgrow="ALWAYS" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.controllers.Inventario.FXML_NewProducto">

    <HBox alignment="CENTER_LEFT" style="-fx-background-color: black;">
        <ImageView fx:id="btn_atras" fitHeight="105.0" fitWidth="94.0" onMouseClicked="#cerrar" pickOnBounds="true" preserveRatio="true">
            <image>
                <Image url="@../img/regresarb.png" />
            </image>
        </ImageView>
        <Label alignment="CENTER" maxWidth="Infinity" styleClass="Label-titulos" text="Agregar nuevo producto" HBox.hgrow="ALWAYS">
            <stylesheets>
                <URL value="@../css/Fondo.css" />
                <URL value="@../css/styles.css" />
            </stylesheets>
        </Label>
    </HBox>

    <VBox alignment="CENTER" spacing="20" VBox.vgrow="ALWAYS">
        <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
        </padding>

        <HBox alignment="CENTER" maxWidth="Infinity" spacing="10">
            <Label style="-fx-font-size: 22px;" styleClass="label-conte" text="Código de barras:">
            <HBox.margin>
               <Insets left="20.0" />
            </HBox.margin></Label>
            <TextField fx:id="layout1" promptText="Ingrese el código del nuevo producto" style="-fx-font-size: 22px;" styleClass="label-conte" stylesheets="@../css/styles.css" HBox.hgrow="ALWAYS">
            <HBox.margin>
               <Insets right="20.0" />
            </HBox.margin></TextField>
        </HBox>

        <HBox alignment="CENTER" maxWidth="Infinity" spacing="10">
            <Label style="-fx-font-size: 22px;" styleClass="label-conte" text="Descripción:">
            <HBox.margin>
               <Insets left="20.0" />
            </HBox.margin></Label>
            <TextField fx:id="layout2" promptText="Ingrese la descripción del nuevo producto" style="-fx-font-size: 22px;" styleClass="label-conte" stylesheets="@../css/styles.css" HBox.hgrow="ALWAYS">
            <HBox.margin>
               <Insets right="20.0" />
            </HBox.margin></TextField>
        </HBox>

        <HBox alignment="CENTER" maxWidth="Infinity" spacing="10" style="-fx-font-size: 22px;">
            <Label style="-fx-font-size: 20px;" styleClass="label-conte" text="Precio costo:" />
            <Spinner fx:id="spinner1" editable="true" style="-fx-font-size: 20px;" styleClass="label-conte" stylesheets="@../css/styles.css" HBox.hgrow="ALWAYS" />
        </HBox>

        <HBox alignment="CENTER" maxWidth="Infinity" spacing="10">
            <Label style="-fx-font-size: 22px;" styleClass="label-conte" text="Precio venta:" />
            <Spinner fx:id="spinner2" editable="true" style="-fx-font-size: 22px;" styleClass="label-conte" stylesheets="@../css/styles.css" HBox.hgrow="ALWAYS" />
        </HBox>

        <HBox alignment="CENTER" maxWidth="Infinity" spacing="10">
            <Label style="-fx-font-size: 22px;" styleClass="label-conte" text="Categoría:" />
            <ComboBox fx:id="categorias" promptText="Cerdo" style="-fx-font-size: 22px;" styleClass="label-conte" stylesheets="@../css/styles.css" HBox.hgrow="ALWAYS" />
        </HBox>

        <HBox alignment="CENTER" maxWidth="Infinity" spacing="10" style="-fx-font-size: 22px;">
            <Label style="-fx-font-size: 20px;" styleClass="label-conte" text="Cantidad mínima:" />
            <Spinner fx:id="spinner3" editable="true" style="-fx-font-size: 20px;" styleClass="label-conte" stylesheets="@../css/styles.css" HBox.hgrow="ALWAYS" />
        </HBox>

        <HBox alignment="CENTER" maxWidth="Infinity" spacing="10">
            <Label fx:id="lblCantidad" style="-fx-font-size: 22px;" styleClass="label-conte" text="Cantidad ingresada:" />
            <TextField fx:id="txtcantEntrante" promptText="ingrese una cantidad" style="-fx-font-size: 22px;" styleClass="label-conte" stylesheets="@../css/styles.css" HBox.hgrow="ALWAYS" />
            <Label fx:id="lblCantidad1" style="-fx-font-size: 22px;" styleClass="label-conte" text="Cantidad ingresada" />
        </HBox>

        <Button maxWidth="Infinity" onAction="#agregar" style="-fx-font-size: 22px;" styleClass="btn_agre" stylesheets="@../css/styles.css" text="Ingresar el producto">
            <VBox.margin>
                <Insets top="20" />
            </VBox.margin>
        </Button>
      <VBox.margin>
         <Insets bottom="10.0" top="10.0" />
      </VBox.margin>
    </VBox>
   <stylesheets>
      <URL value="@../Documents/GitHub/PuntoDeVenta/carniceria/src/main/resources/css/Fondo.css" />
      <URL value="@../css/Styles.css" />
   </stylesheets>
</VBox>
