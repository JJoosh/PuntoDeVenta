<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<VBox fx:id="rootPane" style="-fx-background-color: white;" stylesheets="@../css/Styles.css" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.controllers.Inventario.FXMLProductosEliminados">
   <children>
      <Label maxWidth="Infinity" styleClass="Label-titulos" text="Archivo de productos" VBox.vgrow="NEVER" style="-fx-background-color: #207361;">
         <font>
            <Font size="35.0" />
         </font>
      </Label>

      <GridPane hgap="10" vgap="10" VBox.vgrow="NEVER">
         <padding>
            <Insets bottom="20" left="20" right="20" top="20" />
         </padding>
         <columnConstraints>
            <ColumnConstraints hgrow="NEVER" minWidth="62.0" prefWidth="62.0" />
            <ColumnConstraints hgrow="SOMETIMES" minWidth="100.0" />
            <ColumnConstraints hgrow="ALWAYS" minWidth="200.0" />
            <ColumnConstraints hgrow="NEVER" minWidth="62.0" prefWidth="62.0" />
         </columnConstraints>
         <rowConstraints>
            <RowConstraints vgrow="SOMETIMES" />
         </rowConstraints>
         <children>
            <ImageView fitHeight="62.0" fitWidth="62.0" onMouseClicked="#cerrar" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="0">
               <image>
                  <Image url="@../img/regresarb.png" />
               </image>
            </ImageView>
            <Label styleClass="label-conte" text="Consultar:" GridPane.columnIndex="1">
               <font>
                  <Font name="System Bold" size="24.0" />
               </font>
            </Label>
            <TextField fx:id="buscarTextField" promptText="Ingrese nombre o ID del producto" styleClass="letra_text" GridPane.columnIndex="2" style="-fx-border-color: gray;" />
            <ImageView accessibleRole="BUTTON" fitHeight="62.0" fitWidth="62.0" pickOnBounds="true" preserveRatio="true" GridPane.columnIndex="3">
               <image>
                  <Image url="@../img/buscar.png" />
               </image>
            </ImageView>
         </children>
      </GridPane>

      <Button fx:id="cambiarEstadoButton" onAction="#cambiarEstadoProducto" maxWidth="Infinity" style="-fx-font-size: 28px;" styleClass="btn_habi" text="Habilitar producto" alignment="CENTER" VBox.vgrow="NEVER">
         <VBox.margin>
            <Insets left="20" right="20" bottom="20" />
         </VBox.margin>
      </Button>

      <AnchorPane VBox.vgrow="ALWAYS">
         <VBox.margin>
            <Insets left="20" right="20" bottom="20" />
         </VBox.margin>
         <TableView fx:id="productosTableView" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
            <columns>
               <TableColumn fx:id="codigoColumn" text="CÃ³digo" minWidth="100" />
               <TableColumn fx:id="nombreColumn" text="Nombre" minWidth="150" />
               <TableColumn fx:id="costoColumn" text="Costo" minWidth="100" />
               <TableColumn fx:id="precioColumn" text="Precio venta" minWidth="100" />
               <TableColumn fx:id="categoriaColumn" text="Categoria" minWidth="100" />
               <TableColumn fx:id="estadoColumn" text="Estado" minWidth="100" />
            </columns>
            <columnResizePolicy>
               <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
            </columnResizePolicy>
         </TableView>
      </AnchorPane>
   </children>
</VBox>