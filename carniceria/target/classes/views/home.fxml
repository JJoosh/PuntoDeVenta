<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.shape.Line?>
<?import javafx.scene.text.Font?>

<HBox fx:id="root" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.app.controllers.HomeController">
   <VBox fx:id="menu_lateral" styleClass="fondo-login" stylesheets="@../css/Styles.css" HBox.hgrow="NEVER" alignment="CENTER" spacing="15" prefWidth="215">
      <padding>
         <Insets top="20" bottom="20" left="10" right="10"/>
      </padding>
      <ImageView fitHeight="48.0" fitWidth="133.0" pickOnBounds="true" preserveRatio="true">
         <Image url="@../img/LOGO.png" />
      </ImageView>
      <ImageView fitHeight="81.0" fitWidth="76.0" pickOnBounds="true" preserveRatio="true">
         <Image url="@../img/user.png" />
      </ImageView>
      <Label fx:id="usser" alignment="CENTER" text="Usuario" textAlignment="CENTER" textFill="WHITE">
         <font>
            <Font name="Yu Gothic UI Semibold" size="20.0" />
         </font>
      </Label>
      <Line endX="100.0" startX="-100.0" stroke="#fffbfb" strokeWidth="3.0" />
      <VBox spacing="10" alignment="CENTER">
         <Label fx:id="menu_ventas" onMouseClicked="#abrirVentas" styleClass="menu-modulos" text="Ventas             F1" />
         <Label fx:id="menu_inventario" onMouseClicked="#abrirInventario" styleClass="menu-modulos" text="Inventario        F2" />
         <Label fx:id="menu_kardex" onMouseClicked="#abrirCorteCaja" styleClass="menu-modulos" text="Corte                F3" />
         <Label fx:id="menu_devoluciones" onMouseClicked="#abrirDevoluciones" styleClass="menu-modulos" text="Devoluciones  F4" />
         <Label onMouseClicked="#openClients" styleClass="menu-modulos" text="Clientes           F5" />
      </VBox>
      <VBox VBox.vgrow="ALWAYS" />
      <VBox alignment="CENTER" spacing="10">
         <ImageView onMouseClicked="#openHome" fitHeight="50.0" fitWidth="56.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../img/casa.png" />
         </ImageView>
         <Label onMouseClicked="#abrirConfiguracion" styleClass="usuario" text="Administrar Usuarios" />
         <HBox alignment="CENTER" spacing="10">
            <ImageView fx:id="cerrar_sesion" onMouseClicked="#cerrar" fitHeight="43.0" fitWidth="47.0" pickOnBounds="true" preserveRatio="true">
               <Image url="@../img/Salir-b.png" />
            </ImageView>
            <Label onMouseClicked="#cerrar" text="Cerrar sesion" textFill="WHITE">
               <font>
                  <Font name="Yu Gothic UI Bold" size="15.0" />
               </font>
            </Label>
         </HBox>
      </VBox>
   </VBox>
   <StackPane fx:id="home" style="-fx-background-color: white;" HBox.hgrow="ALWAYS">
      <VBox alignment="CENTER" spacing="20">
         <ImageView fx:id="cerrar_sesion1" fitHeight="243.0" fitWidth="260.0" pickOnBounds="true" preserveRatio="true">
            <Image url="@../img/Home.png" />
         </ImageView>
         <Label alignment="CENTER" text="Bienvenido" textAlignment="CENTER" textFill="#4d2d12">
            <font>
               <Font name="Yu Gothic UI Regular" size="60.0" />
            </font>
         </Label>
      </VBox>
   </StackPane>
</HBox>