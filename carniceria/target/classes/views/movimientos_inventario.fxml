<BorderPane prefHeight="900.0" prefWidth="1660.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
    <top>
        <Label id="Titulo_modulo" prefHeight="80.0" prefWidth="1660.0" style="-fx-background-color: black; -fx-background-position: center; -fx-text-fill: white;" text="Historial de movimientos de inventario">
            <font>
                <Font name="Arial" size="35.0" />
            </font>
            <stylesheets>
                <URL value="@../css/styles.css" />
                <URL value="@../css/Fondo.css" />
            <URL value="@../css/Fondo.css" />
            </stylesheets>
        </Label>
    </top>
    <center>
        <VBox spacing="20.0" style="-fx-padding: 20px;">
            <children>
                <GridPane hgap="10.0" vgap="10.0">
                    <columnConstraints>
                        <ColumnConstraints hgrow="SOMETIMES" />
                        <ColumnConstraints hgrow="SOMETIMES" />
                        <ColumnConstraints hgrow="SOMETIMES" />
                    </columnConstraints>
                    <rowConstraints>
                        <RowConstraints vgrow="SOMETIMES" />
                        <RowConstraints vgrow="SOMETIMES" />
                    </rowConstraints>
                    <children>
                        <VBox GridPane.columnIndex="0" GridPane.rowIndex="0">
                            <children>
                                <Label styleClass="tex-sub" stylesheets="@../css/styles.css" text="Del dÃ­a:" />
                                <DatePicker fx:id="fecha_mov" prefHeight="39.0" />
                            </children>
                        </VBox>
                        <VBox GridPane.columnIndex="1" GridPane.rowIndex="0">
                            <children>
                                <Label styleClass="tex-sub" stylesheets="@../css/styles.css" text="Buscar por:" />
                                <TextField fx:id="buscar_mov" promptText="Cajero, producto o departamento" style="-fx-border-color: gray;" styleClass="b-white" stylesheets="@../css/styles.css" />
                            </children>
                        </VBox>
                        <VBox GridPane.columnIndex="2" GridPane.rowIndex="0">
                            <children>
                                <Label styleClass="tex-sub" stylesheets="@../css/styles.css" text="Movimientos" />
                                <ComboBox fx:id="tipo_mov" promptText="-Todos-" style="-fx-background-color: F0D9D1;" styleClass="b-black" stylesheets="@../css/styles.css" />
                            </children>
                        </VBox>
                        <VBox GridPane.columnIndex="1" GridPane.rowIndex="1">
                            <children>
                                <ComboBox fx:id="cat_historial" prefHeight="45.0" promptText="Categorias" style="-fx-background-color: CDDBE8; -fx-min-height: 45; -fx-max-height: 50;" styleClass="b-red" stylesheets="@../css/styles.css" />
                            </children>
                        </VBox>
                        <VBox GridPane.columnIndex="2" GridPane.rowIndex="1">
                            <children>
                                <Button fx:id="exportar_mov" mnemonicParsing="false" prefHeight="54.0" prefWidth="140.0" styleClass="b-black" stylesheets="@../css/styles.css" text="Exportar excel" />
                            </children>
                        </VBox>
                    </children>
                </GridPane>
                <ScrollPane fitToWidth="true" VBox.vgrow="ALWAYS">
                    <content>
                        <TableView styleClass="table" stylesheets="@../css/styles.css">
                            <columns>
                                <TableColumn prefWidth="100.0" text="Hora" />
                                <TableColumn prefWidth="200.0" text="Descripcion del producto" />
                                <TableColumn prefWidth="100.0" text="Habia" />
                                <TableColumn prefWidth="150.0" text="tipo de movimiento" />
                                <TableColumn prefWidth="100.0" text="Cantidad" />
                                <TableColumn prefWidth="100.0" text="Cajero" />
                                <TableColumn prefWidth="150.0" text="Departamento" />
                            </columns>
                        </TableView>
                    </content>
                </ScrollPane>
            </children>
        </VBox>
    </center>
    <left>
        <AnchorPane prefWidth="28.0" style="-fx-background-color: crimson;" BorderPane.alignment="CENTER" />
    </left>
</BorderPane>
